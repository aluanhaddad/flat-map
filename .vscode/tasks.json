{
  "version": "0.1.0",
  "command": "npm",
  "isShellCommand": true,
  "showOutput": "always",
  "suppressTaskName": true,
  "tasks": [
    {
      "taskName": "install",
      "args": [
        "install"
      ]
    },
    {
      "taskName": "update",
      "args": [
        "update"
      ]
    },
    {
      "isTestCommand": true,
      "taskName": "test",
      "echoCommand": false,
      "showOutput": "always",
      "promptOnClose": false,
      "isBuildCommand": true,
      "isShellCommand": true,
      "command": "npm",
      "problemMatcher": {
        "applyTo": "allDocuments",
        "severity": "error",
        "owner": "Tasks",
        "pattern": [
          {
            "regexp": "(^\\s*at:\\sTest\\..*\\s\\((.*):(\\d+):(\\d+)\\)$)+",
            "file": 2,
            "line": 3,
            "column": 4,
            "message": 1,
            "loop": true
          }
        ],
        "fileLocation": "absolute"
      },
      "args": [
        "test"
      ]
    }
  ]
}