    {
      "taskName": "install",
      "args": [
        "install"
      ]
    },
    {
      "taskName": "update",
      "args": [
        "update"
      ]
    },
    {
      "taskName": "test",
      "args": [
        "run",
        "test"
      ]
    }
  ]
}