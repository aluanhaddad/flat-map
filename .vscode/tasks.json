  "version": "2.0.0",
  "command": "npm",
  "isShellCommand": true,
  "showOutput": "always",
  "suppressTaskName": true,
  "tasks": [
    {
      "isBackground": true,
      "isBuildCommand": true,
      "taskName": "watch",
      "args": [
        "run",
        "watch"
